{% extends 'app.twig' %}

{% block content %}
    {% if posts is not empty %}
        {% for post in posts %}
            <!-- Post -->
            <div class="post-preview">
                <a href="{{ path_for('post', { 'id': post.post }) }}">
                    <h2 class="post-title">
                        {{ post.title }}
                    </h2>
                    <h3 class="post-subtitle">
                        {{ post.description }}
                    </h3>
                </a>
                <p class="post-meta">Posted by
                    <a href="{{ path_for('author', { 'id': post.author_id }) }}">{{ post.author_name }}</a>
                    on {{ post.date_create }}</p>
            </div>
            <hr>
        {% endfor %}
        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
    {% else %}
        <p class="text-center"><b>No Blog Posts</b></p>
    {% endif %}
{% endblock %}
