<!doctype html>
<html lang="de">

<head>
    <title>{{ title }} | {{ brand }}</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Fonts and icons -->
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic'>
    <link rel='stylesheet'
          href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.11.1/css/all.min.css"
          integrity="sha256-PbSmjxuVAzJ6FPvNYsrXygfGhNJYyZ2GktDbkMBqQZg=" crossorigin="anonymous">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha256-YLGeXaapI0/5IgZopewRJcFXomhRMlYYjugPLSyNjTY=" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/startbootstrap-clean-blog@5.0.8/css/clean-blog.min.css"
          integrity="sha256-02HapOsMWrvlzj6N+QSzs4dgtbrDVGvektSptrxM8QQ=" crossorigin="anonymous">
    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="https://cdn.statically.io/img/i.imgur.com/{{ favicon_apple_touch_icon }}.png">
    <link rel="icon" type="image/png" sizes="32x32" href="https://cdn.statically.io/img/i.imgur.com/{{ favicon_icon_32 }}.png">
    <link rel="icon" type="image/png" sizes="16x16" href="https://cdn.statically.io/img/i.imgur.com/{{ favicon_icon_16 }}.png">
    <link rel="manifest"
          href="https://cdn.statically.io/gl/filli-group/img/raw/{{ favicon_manifest }}/site.webmanifest">
    <link rel="mask-icon"
          href="https://cdn.statically.io/gl/filli-group/img/raw/{{ favicon_mask_icon }}/safari-pinned-tab.svg"
          color="#5bbad5">
    <link rel="shortcut icon" href="https://cdn.filli-group.com/{{ favicon_shortcut_icon }}/img/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config"
          content="https://cdn.statically.io/gl/filli-group/img/raw/{{ favicon_msapplication_config }}/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <!-- Meta Tags -->
    <meta name='keywords' content='{{ meta_keywords }}'>
    <meta name='description' content='{{ meta_description }}'>
    <meta name='author' content='Ursin Filli, ursin.filli@Filli-IT.ch'>
    <meta name='copyright' content='Filli Group (Einzelunternehmen) and/or its affiliates'>
    <meta name='reply-to' content='ursin.filli@Filli-IT.ch'>
    <meta name='revisit-after' content='1 week'>
</head>

<body>

{% include 'navigation.twig' %}

<header class="masthead" style="background-image: url('{{ bg_img }}')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="{% if post is defined %}post{% else %}site{% endif %}-heading">
                    <h1>{{ page_title }}</h1>
                    <h2 class="subheading">{{ page_sub_title }}</h2>
                    {% if post is defined %}
                        <span class="meta">Posted by
                        <a href="{{ path_for('author', { 'id': post.author_id }) }}">{{ post.author_name }}</a>
                        on {{ post.date_create }} {% if post.date_create != post.date_update %} updated on {{ post.date_update }}{% endif %}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
{% if post is defined %}
    <article>
{% endif %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>
{% if post is defined %}
    </article>
{% endif %}

<hr>

{% include 'footer.twig' %}

