<script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha256-fzFFyH01cBVPYzl16KT40wqjhgPtq6FFUB6ckN2+GGw=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/startbootstrap-clean-blog@5.0.8/js/clean-blog.min.js"
		integrity="sha256-8Szrb5JdX1HblBbyjEcgjWhGI55A/iY9J6+LyEtePGo=" crossorigin="anonymous"></script>
		
<!-- Custom JS Files -->
{% if contact is defined %}
	<script src="https://cdn.jsdelivr.net/npm/startbootstrap-clean-blog@5.0.8/js/jqBootstrapValidation.js"
			integrity="sha256-OUCoesbAhKxcO6uDLbMu6OIaHF0+vGtJ8QW2CjudMdw=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/startbootstrap-clean-blog@5.0.8/js/contact_me.js"
			integrity="sha256-Iu8y0/bFsrlBMIz6lJxUYQ3P5PRaKqtGd6s1f0xNb/8=" crossorigin="anonymous"></script>
{% endif %}
</body>

</html>